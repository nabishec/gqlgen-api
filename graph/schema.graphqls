type Post {
  id: ID!
  title: String!
  text: String!
  allowComments: Boolean!
  comments: [Comment!]!
}

type Comment {
  id: ID!
  post: Post!
  parent: ID
  text: String!
}

type Query {
  posts: [Post!]!
  post(id: ID!): Post
}

input NewPost {
  title: String!
  text: String!
  allowComments: Boolean!
}

input NewComment {
  postId: ID!
  parentId: ID
  text: String!
}

type Mutation {
  addPost(input: NewPost!): Post!
  addComment(input: NewComment!): Comment!
}

